# Schwab API Credentials
SCHWAB_API_KEY=your_api_key_here
SCHWAB_API_SECRET=your_api_secret_here
SCHWAB_ACCOUNT_ID=your_account_id_here

# API URLs
SCHWAB_API_BASE_URL=https://api.schwab.com/v1/
SCHWAB_AUTH_URL=https://api.schwab.com/oauth2/token
SCHWAB_STREAM_URL=wss://api.schwab.com/v1/markets/stream

# Trading Settings
ENABLE_EXTENDED_HOURS=true
DEFAULT_ORDER_TYPE=MARKET
MAX_ORDER_AMOUNT=5000  # Maximum dollar amount per single order
TRADING_MODE=MOCK  # Options: LIVE, PAPER, MOCK

# Logging
LOG_LEVEL=INFO
ENABLE_TRADE_LOGGING=true

# Voice Recognition Settings
VOICE_RECOGNITION_TIMEOUT=5  # Timeout in seconds
ENABLE_VOICE_COMMANDS=true
SPEECH_RECOGNITION_ENGINE=whisper  # Options: google, whisper
WHISPER_MODEL_SIZE=base  # Options: tiny, base, small, medium, large 